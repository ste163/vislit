{
  "name": "vislit",
  "author": "Sam Edwards",
  "description": "Creative writing application for creating, managing, tracking, and visualizing progress on writing projects",
  "version": "0.1.0",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "private": true,
  "repository": "github:ste163/vislit",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "npm run build",
    "test": "IS_TEST=true NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "@typescript-eslint/eslint-plugin": ">=4.31.2",
    "@vitejs/plugin-vue": ">=1.9.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "7.0.3",
    "electron": ">=15.0.0",
    "electron-builder": "22.11.7",
    "electron-devtools-installer": "3.2.0",
    "eslint": ">=7.32.0",
    "eslint-plugin-vue": "^7.18.0",
    "jest": "^27.2.4",
    "lint-staged": "11.1.2",
    "postcss": "^8.3.11",
    "simple-git-hooks": "2.6.1",
    "stylelint": "^14.1.0",
    "stylelint-config-standard": "^24.0.0",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^27.0.5",
    "typescript": ">=4.4.2",
    "vite": ">=2.5.10",
    "vite-plugin-eslint": "^1.3.0",
    "vue-tsc": ">=0.3.0"
  },
  "dependencies": {
    "@tiptap/starter-kit": "^2.0.0-beta.140",
    "@tiptap/vue-3": "^2.0.0-beta.80",
    "@vee-validate/zod": "^4.5.2",
    "electron-updater": "4.6.0",
    "lodash": "^4.17.21",
    "lowdb": "github:dankreiger/lowdb#chore/esm-cjs-hybrid-WITH-LIB",
    "nanoid": "^3.1.28",
    "vee-validate": "^4.5.2",
    "vue": ">=3.2.13",
    "vue-router": ">=4.0.11",
    "zod": "^3.9.5"
  }
}
