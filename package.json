{
  "name": "vislit",
  "author": "Sam Edwards",
  "description": "Creative writing application for creating, managing, tracking, and visualizing progress on writing projects",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=v16.0",
    "npm": ">=8.1"
  },
  "private": true,
  "repository": "github:ste163/vislit",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "npm run build",
    "test": "IS_TEST=true NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:coveralls": "IS_TEST=true NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand && coveralls < coverage/lcov.info",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue --fix",
    "format": "prettier --write './packages/*/src/**'",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 96"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "^1.10.1",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@rushstack/eslint-patch": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "coveralls": "^3.1.1",
    "cross-env": "7.0.3",
    "electron": "^16.0.7",
    "electron-builder": "22.11.7",
    "electron-devtools-installer": "3.2.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.4.0",
    "jest": "^27.4.7",
    "lint-staged": "12.1.2",
    "postcss": "^8.4.1",
    "prettier": "^2.5.1",
    "simple-git-hooks": "2.7.0",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.5.4",
    "vite": ">=2.7.10",
    "vite-plugin-eslint": "^1.3.0",
    "vue-tsc": "^0.29.6"
  },
  "dependencies": {
    "@tiptap/starter-kit": "^2.0.0-beta.153",
    "@tiptap/vue-3": "^2.0.0-beta.81",
    "@vee-validate/zod": "^4.5.7",
    "electron-updater": "4.6.5",
    "lowdb": "github:dankreiger/lowdb#chore/esm-cjs-hybrid-WITH-LIB",
    "minisearch": "^3.2.0",
    "nanoid": "^3.1.28",
    "vee-validate": "^4.5.7",
    "vue": "^3.2.26",
    "vue-router": ">=4.0.12",
    "zod": "^3.11.6"
  }
}
