{
  "name": "vislit",
  "author": "Sam Edwards",
  "description": "Creative writing application for creating, managing, tracking, and visualizing progress on writing projects",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=v18.0",
    "npm": ">=8.1"
  },
  "private": true,
  "repository": "github:ste163/vislit",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "pretest": "npm run build",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck && npx vitest --run",
    "test": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:coveralls": "vitest --run --coverage && coveralls < coverage/lcov.info",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue --fix",
    "format": "prettier --write './packages/*/src/**'",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "husky install && cross-env ELECTRON_RUN_AS_NODE=1 npx --no-install electron ./scripts/update-electron-vendors.js",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{md, js,ts,vue}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.2.0",
    "@testing-library/vue": "6.6.1",
    "@types/electron-devtools-installer": "2.2.2",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "@vitejs/plugin-vue": "4.0.0",
    "@vitest/coverage-c8": "0.25.6",
    "@vue/eslint-config-typescript": "11.0.2",
    "autoprefixer": "10.4.13",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "electron": "22.0.0",
    "electron-builder": "23.6.0",
    "electron-devtools-installer": "3.2.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-testing-library": "5.9.1",
    "eslint-plugin-vue": "9.8.0",
    "happy-dom": "8.1.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "postcss": "8.4.19",
    "prettier": "2.8.1",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.4",
    "vite": "4.0.0",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "0.25.6",
    "vue-tsc": "1.0.12"
  },
  "dependencies": {
    "@tiptap/starter-kit": "2.0.0-beta.207",
    "@tiptap/vue-3": "2.0.0-beta.207",
    "@vee-validate/zod": "4.7.3",
    "electron-updater": "5.3.0",
    "lowdb": "3.0.0",
    "minisearch": "3.3.0",
    "nanoid": "4.0.0",
    "vee-validate": "4.7.3",
    "vue": "3.2.45",
    "vue-router": "4.1.6",
    "zod": "3.19.1"
  }
}
