{
  "name": "vislit",
  "author": "Sam Edwards",
  "description": "Creative writing application for creating, managing, tracking, and visualizing progress on writing projects",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=v16.0",
    "npm": ">=8.1"
  },
  "private": true,
  "repository": "github:ste163/vislit",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "pretest": "npm run build",
    "test": "vitest --run --coverage",
    "test:watch": "vitest --watch",
    "test:coveralls": "vitest --run --coverage && coveralls < coverage/lcov.info",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue --fix",
    "format": "prettier --write './packages/*/src/**'",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.0",
    "@testing-library/user-event": "^14.0.0-beta",
    "@testing-library/vue": "^6.5.1",
    "@types/electron-devtools-installer": "2.2.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-vue": "2.2.2",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "c8": "^7.11.0",
    "coveralls": "^3.1.1",
    "cross-env": "7.0.3",
    "electron": "^17.1.1",
    "electron-builder": "22.14.13",
    "electron-devtools-installer": "3.2.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "eslint-plugin-vue": "^8.4.0",
    "happy-dom": "^2.41.0",
    "lint-staged": "12.1.2",
    "postcss": "^8.4.6",
    "prettier": "^2.5.1",
    "simple-git-hooks": "2.7.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "vite": "^2.8.4",
    "vite-plugin-eslint": "^1.3.0",
    "vitest": "0.7.10",
    "vue-tsc": "0.31.4"
  },
  "dependencies": {
    "@tiptap/starter-kit": "^2.0.0-beta.153",
    "@tiptap/vue-3": "^2.0.0-beta.81",
    "@vee-validate/zod": "^4.5.7",
    "electron-updater": "4.6.5",
    "lowdb": "3.0.0",
    "minisearch": "^3.2.0",
    "nanoid": "^3.1.28",
    "vee-validate": "^4.5.7",
    "vue": "^3.2.31",
    "vue-router": ">=4.0.12",
    "zod": "^3.11.6"
  }
}
