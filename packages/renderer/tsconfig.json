{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "api": ["./src/api"],
      "components": ["./src/components"],
      "composables": ["./src/composables/*"],
      "const": ["src/const"],
      "directives": ["./src/directives"],
      "icons": ["./src/icons"],
      "renderer-interfaces": ["./src/renderer-interfaces"],
      "router": ["./src/router"],
      "views": ["./src/views"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "shims-vue.d.ts",
    "../../types/*.d.ts",
    "../preload/electron-api.d.ts"
  ]
}
